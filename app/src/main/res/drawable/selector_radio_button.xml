<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="30dp"
                />
            <solid
                android:color="#34C6C6C6"
                />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                />
            <size
                android:width="200dp"
                android:height="200dp"
                />
            <stroke
                android:width="4dp"
                android:color="#B3B3B3"
                />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="30dp"
                />
            <solid
                android:color="#FFFFFF"
                />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                />
            <size
                android:width="200dp"
                android:height="200dp"
                />
            <stroke
                android:width="4dp"
                android:color="#B3B3B3"
                />
        </shape>
    </item>
</selector>