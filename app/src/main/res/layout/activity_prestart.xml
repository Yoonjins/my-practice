<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:background="#2DE8ECE4"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/left_icon" />


        <ImageButton
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="870dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="true"
            android:background="#2DE8ECE4"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="(주)하나카드"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginLeft="50dp"
        android:text="인감촬영을 시작하겠습니다."
        android:textSize="60sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="754dp"
        app:srcCompat="@drawable/textbox" />

    <android.widget.Button
        android:id="@+id/scan_start_button"
        android:layout_width="368dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:background="@drawable/button"
        android:text="인감 스캔하기"
        android:textColor="#ffffff"
        android:textSize="34sp" />


</LinearLayout>